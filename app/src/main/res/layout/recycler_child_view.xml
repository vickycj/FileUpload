<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/childHeadView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP_8"
        android:layout_marginBottom="@dimen/DP_8"
        android:background="@color/colorPrimaryDark">


    <ImageView
            android:id="@+id/coverPic"
            android:layout_width="@dimen/DP_150"
            android:layout_height="@dimen/DP_150"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            tool:layout_constraintEnd_toEndOf="parent"
            tool:layout_constraintStart_toStartOf="parent"
            tool:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"></ImageView>


    <ImageView
            android:id="@+id/playIcon"
            android:layout_width="@dimen/DP_40"
            android:layout_height="@dimen/DP_40"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_play_circle_outline_black_24dp"
            tool:layout_constraintBottom_toBottomOf="@+id/coverPic"
            tool:layout_constraintStart_toStartOf="@+id/coverPic"></ImageView>

    <TextView
            android:id="@+id/songName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            tool:layout_constraintBottom_toBottomOf="parent"
            tool:layout_constraintEnd_toEndOf="@+id/coverPic"
            tool:layout_constraintStart_toStartOf="parent"
            tool:layout_constraintTop_toBottomOf="@+id/coverPic"
            tools:text="@tools:sample/lorem">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>